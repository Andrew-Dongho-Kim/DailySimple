<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/ux_common_background</item>
        <item name="android:statusBarColor">@color/ux_common_background</item>
    </style>

    <style name="ToolbarTitleStyleParent">
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowColor">@color/ux_common_view_background</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabIconTint">@color/tab_text_color</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
    </style>

    <style name="TabTextStyle" parent="UxCommonDpHeaderTextStyleNormal">
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsingTitleStyle" parent="ToolbarTitleStyleParent">
        <item name="android:textColor">@color/ux_common_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandedTitleStyle" parent="ToolbarTitleStyleParent">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="UxCommonSpTextStyleNormal">
        <item name="android:textSize">@dimen/ux_common_text_size_sp_normal</item>
        <item name="android:textColor">@color/ux_common_text_color</item>
    </style>

    <style name="UxCommonDpHeaderTextStyleNormal">
        <item name="android:textSize">@dimen/ux_common_text_size_dp_normal</item>
        <item name="android:textColor">@color/ux_common_text_color</item>
    </style>

    <style name="UxCommonDpHeaderTextStyleTinyBig">
        <item name="android:textSize">@dimen/ux_common_text_size_dp_tiny_big</item>
        <item name="android:textColor">@color/ux_common_text_color</item>
    </style>

    <style name="UxCommonDpTextStyleNormal">
        <item name="android:textSize">@dimen/ux_common_text_size_dp_normal</item>
        <item name="android:textColor">@color/ux_common_text_color</item>
    </style>

    <style name="UxCommonDpTextStyleTinySmall">
        <item name="android:textSize">@dimen/ux_common_text_size_dp_tiny_small</item>
        <item name="android:textColor">@color/ux_common_text_color</item>
    </style>

    <style name="UxCommonDpTextStyleTinyBig">
        <item name="android:textSize">@dimen/ux_common_text_size_dp_tiny_big</item>
        <item name="android:textColor">@color/ux_common_text_color</item>
    </style>
</resources>
