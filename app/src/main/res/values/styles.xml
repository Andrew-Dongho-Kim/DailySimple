<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appPrimary</item>
        <item name="android:colorPrimary">@color/appPrimary</item>
        <item name="colorPrimaryDark">@color/appPrimaryDark</item>
        <item name="android:colorPrimaryDark">@color/appPrimaryDark</item>
        <item name="colorControlActivated">@color/appPrimary</item>
        <item name="android:colorControlActivated">@color/appPrimary</item>
        <item name="colorAccent">@color/appAccent</item>
        <item name="android:colorAccent">@color/appAccent</item>
        <item name="android:navigationBarColor">@color/basic_common_background</item>
        <item name="android:statusBarColor">@color/basic_common_background</item>
        <item name="dialogTheme">@style/AppDialogTheme</item>
    </style>

    <style name="Widget.AppCompat.DropDownItem.Spinner" parent="android:Widget.Material.DropDownItem.Spinner" tools:override="true">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.DropDownItem
        </item>
        <item name="android:popupBackground">@drawable/rounded_view_background</item>
        <item name="android:minWidth">@dimen/basic_popup_menu_item_min_width</item>
        <item name="android:minHeight">@dimen/basic_popup_menu_item_min_height</item>
        <item name="android:paddingStart">@dimen/basic_popup_menu_item_start_padding</item>
        <item name="android:paddingEnd">@dimen/basic_popup_menu_item_end_padding</item>
        <item name="android:paddingTop">@dimen/basic_popup_menu_item_top_padding</item>
        <item name="android:paddingBottom">@dimen/basic_popup_menu_item_bottom_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:gravity">bottom</item>
    </style>

    <style name="ToolbarTitleStyleParent">
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowColor">@color/basic_view_background</item>
    </style>

    <style name="BasicBottomNavigationStyle" parent="Widget.Design.BottomNavigationView" />

    <style name="BottomNavigationTextStyle" parent="BasicHeaderTextDpNormal">
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActiveBottomNavigationTextStyle" parent="BasicHeaderTextDpNormal">
        <item name="android:textColor">@color/appPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsingTitleStyle" parent="ToolbarTitleStyleParent">
        <item name="android:textColor">@color/basic_text1_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandedTitleStyle" parent="ToolbarTitleStyleParent">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="BasicTextSpNormal">
        <item name="android:textSize">@dimen/ux_common_text_size_sp_normal</item>
        <item name="android:textColor">@color/basic_text1_color</item>
    </style>

    <style name="BasicHeaderTextDpTinySmall">
        <item name="android:textSize">@dimen/basic_text_size_dp_tiny_small</item>
        <item name="android:textColor">@color/basic_text1_color</item>
    </style>

    <style name="BasicHeaderTextDpNormal">
        <item name="android:textSize">@dimen/basic_text_size_dp_normal</item>
        <item name="android:textColor">@color/basic_text1_color</item>
    </style>

    <style name="BasicHeaderTextDpTinyBig">
        <item name="android:textSize">@dimen/basic_text_size_dp_tiny_big</item>
        <item name="android:textColor">@color/basic_text1_color</item>
    </style>

    <style name="BasicTextDpNormal">
        <item name="android:textSize">@dimen/basic_text_size_dp_normal</item>
        <item name="android:textColor">@color/basic_text1_color</item>
    </style>

    <style name="BasicTextDpTinyBig">
        <item name="android:textSize">@dimen/basic_text_size_dp_tiny_big</item>
        <item name="android:textColor">@color/basic_text1_color</item>
    </style>

    <style name="BasicTextDpBig">
        <item name="android:textSize">@dimen/basic_text_size_dp_big</item>
        <item name="android:textColor">@color/basic_text1_color</item>
    </style>

    <style name="BasicTextDpTinySmall">
        <item name="android:textSize">@dimen/basic_text_size_dp_tiny_small</item>
        <item name="android:textColor">@color/basic_text1_color</item>
    </style>


</resources>
