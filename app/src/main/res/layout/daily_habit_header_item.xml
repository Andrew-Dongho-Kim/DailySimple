<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="itemModel"
            type="com.dd.android.dailysimple.daily.viewmodel.HabitHeaderItemModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/basic_view_margin_horizontal_small"
        android:paddingTop="@dimen/basic_view_margin_vertical"
        android:paddingEnd="@dimen/basic_view_margin_horizontal_small">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/checked_recycler_view"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/daily_habit_day_date_item" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/month"
            style="@style/BasicTextDpTinySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_app_primary_color_background"
            android:gravity="center"
            android:lines="2"
            android:paddingStart="5dp"
            android:paddingTop="0dp"
            android:paddingEnd="5dp"
            android:paddingBottom="0dp"
            android:text="@{itemModel.year+'\n'+itemModel.month}"
            android:textColor="@color/appWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/checked_recycler_view"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>