<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.dd.android.dailysimple.schedule.daily.viewmodel.HabitHeaderItemModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/month"
            style="@style/UxCommonDpTextStyleTinySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/round_app_primary_color_bacground"
            android:paddingStart="5dp"
            android:paddingTop="0dp"
            android:paddingEnd="5dp"
            android:paddingBottom="0dp"
            android:text="@{viewModel.month}"
            android:textColor="@color/app_white"
            app:layout_constraintBottom_toBottomOf="@id/day_0"
            app:layout_constraintEnd_toStartOf="@id/date_0"
            app:layout_constraintTop_toTopOf="@id/date_0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_4"
            style="@style/UxCommonDpHeaderTextStyleNormal"
            android:layout_width="@dimen/ux_common_check_box_size"
            android:layout_height="@dimen/ux_common_check_box_size"
            android:layout_marginEnd="3dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{viewModel.dates[4]}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/day_4"
            style="@style/UxCommonDpHeaderTextStyleNormal"
            android:layout_width="@dimen/ux_common_check_box_size"
            android:layout_height="@dimen/ux_common_check_box_size"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{viewModel.days[4]}"
            app:layout_constraintEnd_toEndOf="@id/date_4"
            app:layout_constraintStart_toStartOf="@id/date_4"
            app:layout_constraintTop_toBottomOf="@id/date_4" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_3"
            style="@style/UxCommonDpHeaderTextStyleNormal"
            android:layout_width="@dimen/ux_common_check_box_size"
            android:layout_height="@dimen/ux_common_check_box_size"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{viewModel.dates[3]}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/date_4"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/day_3"
            style="@style/UxCommonDpHeaderTextStyleNormal"
            android:layout_width="@dimen/ux_common_check_box_size"
            android:layout_height="@dimen/ux_common_check_box_size"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{viewModel.days[3]}"
            app:layout_constraintEnd_toEndOf="@id/date_3"
            app:layout_constraintStart_toStartOf="@id/date_3"
            app:layout_constraintTop_toBottomOf="@id/date_3" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_2"
            style="@style/UxCommonDpHeaderTextStyleNormal"
            android:layout_width="@dimen/ux_common_check_box_size"
            android:layout_height="@dimen/ux_common_check_box_size"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{viewModel.dates[2]}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/date_3"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/day_2"
            style="@style/UxCommonDpHeaderTextStyleNormal"
            android:layout_width="@dimen/ux_common_check_box_size"
            android:layout_height="@dimen/ux_common_check_box_size"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{viewModel.days[2]}"
            app:layout_constraintEnd_toEndOf="@id/date_2"
            app:layout_constraintStart_toStartOf="@id/date_2"
            app:layout_constraintTop_toBottomOf="@id/date_2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_1"
            style="@style/UxCommonDpHeaderTextStyleNormal"
            android:layout_width="@dimen/ux_common_check_box_size"
            android:layout_height="@dimen/ux_common_check_box_size"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{viewModel.dates[1]}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/date_2"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/day_1"
            style="@style/UxCommonDpHeaderTextStyleNormal"
            android:layout_width="@dimen/ux_common_check_box_size"
            android:layout_height="@dimen/ux_common_check_box_size"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{viewModel.days[1]}"
            app:layout_constraintEnd_toEndOf="@id/date_1"
            app:layout_constraintStart_toStartOf="@id/date_1"
            app:layout_constraintTop_toBottomOf="@id/date_1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_0"
            style="@style/UxCommonDpHeaderTextStyleNormal"
            android:layout_width="@dimen/ux_common_check_box_size"
            android:layout_height="@dimen/ux_common_check_box_size"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{viewModel.dates[0]}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/date_1"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/day_0"
            style="@style/UxCommonDpHeaderTextStyleNormal"
            android:layout_width="@dimen/ux_common_check_box_size"
            android:layout_height="@dimen/ux_common_check_box_size"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{viewModel.days[0]}"
            app:layout_constraintEnd_toEndOf="@id/date_0"
            app:layout_constraintStart_toStartOf="@id/date_0"
            app:layout_constraintTop_toBottomOf="@id/date_0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:onClick="@{viewModel::addDailySchedule}"
            android:src="@drawable/ic_add_black_24dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/day_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/date_0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>