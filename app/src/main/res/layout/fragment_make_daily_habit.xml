<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.dd.android.dailysimple.common.utils.DateUtils" />

        <import type="com.dd.android.dailysimple.common.di.AppDependencyInjectorKt" />

        <variable
            name="alarm"
            type="com.dd.android.dailysimple.db.Alarm" />

        <variable
            name="model"
            type="com.dd.android.dailysimple.db.DailyHabit" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:background="@android:color/transparent"
            android:stateListAnimator="@animator/show_toolbar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                app:collapsedTitleTextAppearance="@style/CollapsingTitleStyle"
                app:contentScrim="@color/basic_common_background"
                app:expandedTitleTextAppearance="@style/ExpandedTitleStyle"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:scrimAnimationDuration="200"
                app:toolbarId="@id/toolbar">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_collapseMode="parallax"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="false"
                    app:lottie_rawRes="@raw/habit_main" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:contentInsetStartWithNavigation="0dp"
                    app:layout_collapseMode="pin"
                    app:menu="@menu/daily_menu" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_view_background"
                    android:paddingStart="@dimen/basic_view_margin_horizontal"
                    android:paddingTop="@dimen/basic_view_margin_vertical"
                    android:paddingEnd="@dimen/basic_view_margin_horizontal"
                    android:paddingBottom="@dimen/basic_view_margin_vertical">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/title_editor"
                        style="@style/BasicTextDpBig"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/basic_view_margin_vertical"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:hint="@string/title"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@{model.title}"
                        app:layout_constraintEnd_toStartOf="@id/color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/color"
                        android:layout_width="@dimen/basic_small_icon_size"
                        android:layout_height="@dimen/basic_small_icon_size"
                        android:src="@drawable/oval"
                        android:tint="@{model.color}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/title_editor"
                        app:layout_constraintTop_toTopOf="@id/title_editor" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/color_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/make_and_edit_habit_color_picker_icon_margin_top"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_color"
                        android:tint="@color/basic_icon_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title_editor" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/basic_view_margin_vertical"
                    android:background="@drawable/rounded_view_background"
                    android:paddingStart="@dimen/basic_view_margin_horizontal"
                    android:paddingTop="@dimen/basic_view_margin_vertical"
                    android:paddingEnd="@dimen/basic_view_margin_horizontal"
                    android:paddingBottom="@dimen/basic_view_margin_vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/start"
                        style="@style/BasicTextDpLittleBig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/basic_view_margin_vertical"
                        android:text="@string/start"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/start_date"
                        style="@style/BasicTextDpLittleBig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@{ model==null ? DateUtils.INSTANCE.todayYMD(AppDependencyInjectorKt.systemLocale()) : DateUtils.INSTANCE.toYMD(model.startTime, AppDependencyInjectorKt.systemLocale())}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/start" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/alarm"
                        style="@style/BasicTextDpLittleBig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/make_and_edit_habit_alarm_margin_top"
                        android:text="@string/alarm"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/start" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/alarm_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@id/alarm"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/alarm" />

                    <View
                        android:id="@+id/alarm_divider"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/basic_divider_size"
                        android:layout_marginTop="@dimen/basic_divider_margin_vertical"
                        android:layout_marginBottom="@dimen/basic_divider_margin_vertical"
                        android:background="@color/basic_divider_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/alarm" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/alarm_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{alarm == null ? View.GONE : View.VISIBLE}"
                        app:constraint_referenced_ids="alarm_divider,repeat_icon, time_icon, alarm_power_icon, repeat_spinner, time_spinner" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/repeat_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/make_and_edit_habit_icon_margin_horizontal"
                        android:layout_marginTop="@dimen/basic_view_margin_vertical"
                        android:src="@drawable/ic_repeat"
                        android:tint="@color/basic_icon_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/alarm_divider" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/repeat_spinner"
                        android:layout_width="@dimen/make_and_edit_habit_spinner_width"
                        android:layout_height="wrap_content"
                        android:entries="@array/alarm_repeat"
                        app:layout_constraintBottom_toBottomOf="@id/repeat_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/repeat_icon" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/time_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/make_and_edit_habit_icon_margin_horizontal"
                        android:layout_marginTop="@dimen/basic_view_margin_vertical_big"
                        android:src="@drawable/ic_time"
                        android:tint="@color/basic_icon_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/repeat_icon" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/alarm_power_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/make_and_edit_habit_icon_margin_horizontal"
                        android:layout_marginTop="@dimen/basic_view_margin_vertical_big"
                        android:src="@drawable/ic_volume"
                        android:tint="@color/basic_icon_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/time_icon" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/time_spinner"
                        android:layout_width="@dimen/make_and_edit_habit_spinner_width"
                        android:layout_height="wrap_content"
                        android:entries="@array/alarm_power"
                        app:layout_constraintBottom_toBottomOf="@id/alarm_power_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/alarm_power_icon" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/basic_view_margin_vertical"
                    android:background="@drawable/rounded_view_background"
                    android:paddingStart="@dimen/basic_view_margin_horizontal"
                    android:paddingTop="@dimen/basic_view_margin_vertical"
                    android:paddingEnd="@dimen/basic_view_margin_horizontal"
                    android:paddingBottom="@dimen/basic_view_margin_vertical">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/memo_editor"
                        style="@style/BasicTextDpBig"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:gravity="top"
                        android:hint="@string/memo"
                        android:minHeight="@dimen/make_and_edit_habit_memo_min_height"
                        android:text="@{model.memo}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>